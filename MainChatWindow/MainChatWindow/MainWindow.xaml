<Window x:Class="MainChatWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainChatWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">tutaj glowny chat</TextBox>
        <TextBox Grid.Column="1" Grid.Row="0">Lista osob</TextBox>
        <Button Grid.Column="1" Grid.Row="1">Guziki</Button>
        <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">Tutaj piszemy tekxt</TextBox>
        
    </Grid>
</Window>
